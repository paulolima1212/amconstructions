generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Product {
  id         String   @id @default(uuid())
  name       String   @unique
  price      Decimal
  provider   String
  measure    Measure
  created_at DateTime @default(now())
  Family     Family?  @relation(fields: [family_id], references: [id], onDelete: Cascade)
  family_id  String?
  Price      Price[]

  @@index([family_id, name])
  @@fulltext([name])
  @@map("products")
}

model Price {
  id         String   @id @default(uuid())
  price      Decimal
  product    Product  @relation(fields: [product_id], references: [id], onDelete: Cascade)
  measure    Measure
  provider   String
  created_at DateTime @default(now())
  product_id String

  @@index([product_id])
  @@map("price")
}

model Service {
  id    String  @id @default(uuid())
  name  String
  price Decimal

  created_at DateTime @default(now())

  @@index([name])
  @@map("services")
}

model Family {
  id       String    @id @default(uuid())
  name     String    @unique
  products Product[]

  created_at DateTime @default(now())

  @@index([name])
  @@map("families")
}

model Provider {
  id   String @id @default(uuid())
  name String @unique

  created_at DateTime @default(now())

  @@index([name])
  @@map("providers")
}

enum Measure {
  KG
  M2
  M
  UN
}
